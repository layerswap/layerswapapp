{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "paths": {
      "@layerswap/widget": [
        "../../packages/widget/src"
      ],
      "@layerswap/widget/*": [
        "../../packages/widget/src/*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/**/*.tsx",
    "pages/_app.js"
  ],
  "exclude": [
    "node_modules",
    "../../packages/widget/src/**/*"
  ]
}