{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@layerswap/widget": [
        "../../packages/widget/dist"
      ]
    },
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/**/*.tsx",
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "pages/_app.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}