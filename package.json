{
  "name": "layerswap-ui",
  "private": true,
  "version": "0.0.0",
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@types/node": "^24.5.1",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.3",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "tailwindcss": "^4.0.15",
    "tailwindcss-animate": "^1.0.5",
    "tsc-alias": "^1.8.16",
    "tsc-watch": "^6.2.0",
    "typescript": "^5.9.2"
  },
  "packageManager": "pnpm@10.20.0",
  "devEngines": {
    "runtime": {
      "name": "node",
      "version": "^24.5.1",
      "onFail": "download"
    }
  },
  "resolutions": {
    "@radix-ui/react-dismissable-layer": "1.1.1",
    "rpc-websockets": "7.11.0",
    "@solana/web3.js": "1.66.0",
    "@walletconnect/universal-provider": "2.21.8",
    "@walletconnect/ethereum-provider": "2.21.8"
  },
  "scripts": {
    "dev": "pnpm --filter @layerswap/bridge dev",
    "build": "pnpm -r run build",
    "build:packages": "pnpm --filter './packages/**' run build",
    "clean": "find . -name 'node_modules' -type d -prune -exec rimraf {} +",
    "changeset": "changeset",
    "version": "changeset version",
    "prepublishOnly": "pnpm run build"
  }
}