{
  "name": "@layerswap/widget",
  "version": "1.0.0-alpha0.1",
  "description": "Streamline your asset transaction experience with Layerswap Widget across 60+ blockchains and 15+ exchanges.",
  "main": "dist/exports/index.js",
  "types": "dist/exports/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/exports/index.js",
      "require": "./dist/exports/index.cjs"
    },
    "./internal": {
      "import": "./dist/exports/internal.js",
      "require": "./dist/exports/internal.cjs"
    },
    "./types": {
      "import": "./dist/exports/types.js",
      "require": "./dist/exports/types.cjs"
    },
    "./*": "./dist/exports/*.js",
    "./index.css": "./dist/index.css"
  },
  "style": "dist/index.css",
  "sideEffects": false,
  "files": [
    "dist",
    "dist/**/*"
  ],
  "scripts": {
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist && rm -rf tsconfig.tsbuildinfo",
    "build:js": "tsup",
    "build:css": "postcss ./src/styles/globals.css -o dist/index.css --config postcss.config.js --env production",
    "build:types": "tsc --outDir dist && tsc-alias",
    "build": "yarn clean && yarn build:js && yarn build:types && yarn build:css",
    "dev": "yarn tsc --build --watch & tsc-alias -w",
    "lint": "eslint src --ext .ts,.tsx --fix"
  },
  "author": "Layerswap",
  "homepage": "https://github.com/layerswap/layerswapapp",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/layerswap/layerswapapp.git",
    "directory": "packages/widget"
  },
  "keywords": [
    "layerswap",
    "layerswap-widget",
    "widget",
    "cross-chain",
    "bridge"
  ],
  "license": "MIT",
  "peerDependencies": {
    "@tanstack/react-query": "^5.59.20",
    "react": "^16.8 || ^17.0 || ^18.0 || ^19.0.0 || ^19.0.0-rc",
    "react-dom": "^16.8 || ^17.0 || ^18.0 || ^19.0.0 || ^19.0.0-rc",
    "zustand": "^4.5.1"
  },
  "dependencies": {
    "@headlessui/react": "^2.1.1",
    "@number-flow/react": "^0.5.10",
    "@radix-ui/react-checkbox": "^1.1.5",
    "@radix-ui/react-context-menu": "^1.0.0",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.0.2",
    "@radix-ui/react-select": "^1.2.1",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-virtual": "^3.10.8",
    "@uidotdev/usehooks": "^2.4.1",
    "axios": "^0.21.4",
    "bn.js": "^5.2.0",
    "cmdk": "^0.2.0",
    "color": "4.2.3",
    "copy-to-clipboard": "^3.3.3",
    "formik": "^2.2.9",
    "framer-motion": "^10.16.15",
    "js-sha3": "^0.8.0",
    "lucide-react": "^0.379.0",
    "posthog-js": "^1.261.0",
    "qrcode.react": "^3.1.0",
    "react-error-boundary": "^4.0.11",
    "react-hot-toast": "^2.2.0",
    "react-use-intercom": "^2.0.0",
    "swr": "^2.2.5",
    "tailwindcss-animate": "^1.0.5",
    "uuid": "^9.0.0",
    "web3": "1.8.0"
  },
  "devDependencies": {
    "@storybook/addon-docs": "^9.1.1",
    "@storybook/addon-links": "^9.1.1",
    "@storybook/addon-onboarding": "^9.1.1",
    "@storybook/testing-library": "^0.2.1",
    "@tailwindcss/postcss": "^4.0.15",
    "@types/bn.js": "^5.1.0",
    "@types/node": "^22.13.13",
    "chromatic": "^6.24.1",
    "esbuild-plugin-path-alias": "^1.0.7",
    "eslint": "8.49.0",
    "eslint-plugin-no-conditional-literals-in-jsx": "file:eslint-plugins/eslint-plugin-no-conditional-literals-in-jsx",
    "eslint-plugin-storybook": "^9.1.1",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "postcss-prefixwrap": "^1.55.0",
    "storybook": "^9.1.1",
    "storybook-addon-mock": "^6.0.1",
    "storybook-react-context": "^0.8.0",
    "tailwindcss": "^4.0.15",
    "tsc-alias": "^1.8.16",
    "tsup": "^8.4.0",
    "typescript": "^5.9.2"
  },
  "resolutions": {
    "rpc-websockets": "7.11.0",
    "@radix-ui/react-dismissable-layer": "1.1.1"
  },
  "engines": {
    "node": ">=22"
  },
  "directories": {
    "lib": "lib"
  },
  "bugs": {
    "url": "https://github.com/layerswap/layerswapapp/issues"
  }
}