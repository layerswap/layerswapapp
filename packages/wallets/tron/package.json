{
  "name": "@layerswap/wallet-tron",
  "version": "1.0.0-alpha0.1",
  "description": "Tron Wallet Provider for Layerswap Widget",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "dist/**/*"
  ],
  "scripts": {
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist && rm -rf tsconfig.tsbuildinfo",
    "build:js": "tsup",
    "build:types": "tsc --outDir dist",
    "build": "yarn clean && yarn build:js && yarn build:types",
    "dev": "yarn tsc --build --watch",
    "lint": "eslint src --ext .ts,.tsx --fix"
  },
  "author": "Layerswap",
  "homepage": "https://github.com/layerswap/layerswapapp",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/layerswap/layerswapapp.git",
    "directory": "packages/wallets/tron"
  },
  "keywords": [
    "layerswap",
    "tron",
    "wallet-provider"
  ],
  "license": "MIT",
  "peerDependencies": {
    "react": "^16.8 || ^17.0 || ^18.0 || ^19.0.0 || ^19.0.0-rc",
    "react-dom": "^16.8 || ^17.0 || ^18.0 || ^19.0.0 || ^19.0.0-rc"
  },
  "dependencies": {
    "@layerswap/widget": "workspace:*",
    "@tronweb3/tronwallet-adapter-bitkeep": "^1.1.5",
    "@tronweb3/tronwallet-adapter-bybit": "^1.0.1",
    "@tronweb3/tronwallet-adapter-foxwallet": "^1.0.1",
    "@tronweb3/tronwallet-adapter-gatewallet": "^1.0.3",
    "@tronweb3/tronwallet-adapter-imtoken": "^1.0.2",
    "@tronweb3/tronwallet-adapter-ledger": "^1.1.11",
    "@tronweb3/tronwallet-adapter-okxwallet": "^1.0.6",
    "@tronweb3/tronwallet-adapter-react-hooks": "^1.1.10",
    "@tronweb3/tronwallet-adapter-tokenpocket": "^1.0.6",
    "@tronweb3/tronwallet-adapter-tronlink": "^1.1.12",
    "@tronweb3/tronwallet-adapter-trust": "^1.0.0",
    "tronweb": "^6.0.4"
  },
  "devDependencies": {
    "@types/node": "^22.13.13",
    "eslint": "8.49.0",
    "tsup": "^8.4.0",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=22"
  },
  "directories": {
    "lib": "lib"
  },
  "bugs": {
    "url": "https://github.com/layerswap/layerswapapp/issues"
  }
}
